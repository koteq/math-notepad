{
  "name": "codemirror-extension-inline-mathjs-expressions",
  "version": "0.0.0",
  "description": "Adds inline computation of Math.js expressions to CodeMirror",
  "author": "Kot",
  "homepage": "https://github.com/koteq/math-notepad#readme",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./lib/esm/index.d.ts",
        "default": "./lib/esm/index.js"
      },
      "require": {
        "types": "./lib/cjs/index.d.ts",
        "default": "./lib/cjs/index.cjs"
      }
    }
  },
  "main": "lib/cjs/index.cjs",
  "module": "lib/esm/index.js",
  "types": "lib/esm/index.d.ts",
  "files": [
    "lib"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/koteq/math-notepad.git",
    "directory": "packages/ext-mathjs"
  },
  "scripts": {
    "build": "rollup -c",
    "prepublishOnly": "rm -rf lib && rollup -c"
  },
  "dependencies": {},
  "devDependencies": {
    "@codemirror/state": "^6.2.1",
    "@codemirror/view": "^6.18.0",
    "@rollup/plugin-typescript": "^11.1.3",
    "mathjs": "^11.11.0",
    "rollup": "^3.28.1",
    "typescript": "^5.2.2"
  },
  "peerDependencies": {
    "@codemirror/state": "^6.0.0",
    "@codemirror/view": "^6.0.0",
    "mathjs": "*"
  }
}
