{
  "compilerOptions": {
    "lib": ["dom", "esnext"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "target": "es2015",

    "allowJs": true,
    "declaration": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "noEmit": true,
    "outDir": "lib",
    "skipLibCheck": true,
    "strict": true
  },
  "include": ["src/**/*"]
}
