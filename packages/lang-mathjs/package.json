{
  "name": "codemirror-language-mathjs",
  "version": "0.0.0",
  "description": "Adds Math.js language support to CodeMirror",
  "author": "Kot",
  "homepage": "https://github.com/koteq/math-notepad#readme",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./lib/esm/index.d.ts",
        "default": "./lib/esm/index.js"
      },
      "require": {
        "types": "./lib/cjs/index.d.ts",
        "default": "./lib/cjs/index.cjs"
      }
    }
  },
  "main": "lib/cjs/index.cjs",
  "module": "lib/esm/index.js",
  "types": "lib/esm/index.d.ts",
  "files": [
    "lib"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/koteq/math-notepad.git",
    "directory": "packages/lang-mathjs"
  },
  "scripts": {
    "build": "rollup -c",
    "pretest": "rollup -c",
    "test": "mocha test/**/*.js",
    "prepublishOnly": "rm -rf lib && rollup -c"
  },
  "dependencies": {
    "@lezer/highlight": "^1.1.6",
    "@lezer/lr": "^1.3.10"
  },
  "devDependencies": {
    "@codemirror/autocomplete": "^6.9.0",
    "@codemirror/language": "^6.9.0",
    "@lezer/generator": "^1.5.0",
    "mocha": "^10.2.0"
  },
  "peerDependencies": {
    "@codemirror/autocomplete": "^6.0.0",
    "@codemirror/language": "^6.0.0"
  }
}
